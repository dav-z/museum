<%= form_with(model: ticket, local: true) do |form| %>
  <% if ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
      <% ticket.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date, id: :ticket_date, :start_year => Date.today.year %>
  </div>

  <div class="field">
    <%= form.label :price %>
    $<%= form.number_field :price, id: :ticket_price, readonly: true, value: 20 %>
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.select :quantity, (1..4), id: :ticket_quantity %>
  </div>

  <div class="field">
    <%= form.hidden_field :user_id, id: :ticket_user_id %>
  </div>

  <div class="actions">
    <%= form.submit "Buy Ticket(s)" %>
  </div>
<% end %>
